{
  "name": "paste-as-markdown-codeblock",
  "displayName": "paste-as-markdown-codeblock",
  "description": "This is a VS Code extension that pastes copied code into the editor as a Markdown-formatted code block.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:paste-as-markdown-codeblock.languages",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "paste-as-markdown-codeblock.paste",
        "title": "%config.title%"
      }
    ],
    "keybindings": [
      {
        "command": "paste-as-markdown-codeblock.paste",
        "key": "ctrl+alt+v",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "pasteAsMarkdownCodeblock.defaultLanguage": {
          "type": "string",
          "default": "plaintext",
          "description": "%config.defaultLanguage.description%"
        },
        "pasteAsMarkdownCodeblock.languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "plaintext",
            "javascript",
            "typescript",
            "python",
            "cpp",
            "java",
            "bash",
            "html",
            "css",
            "json"
          ],
          "description": "%config.languages.description%"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "paste-as-markdown-codeblock.paste",
          "group": "9_cutcopypaste@5",
          "when": "editorTextFocus || editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
